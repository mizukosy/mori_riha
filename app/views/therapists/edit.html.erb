<%= form_with(model: @therapist, local: true) do |f| %>
  <%= render 'shared/error_messages', model: f.object %>
  <div class="therapist-form">
    療法士の編集
    <%= f.text_field :name, class:"name", placeholder:"名前" %>
    <%= f.collection_select(:therapist_type_id, TherapistType.all, :id, :name,{}, {class:"thrapist-type"}) %>
    <%= f.text_field :exp_year, class:"year", placeholder:"経験年数"%>
    <%= f.submit "登録",class:"submit-btn" %>
  </div>
  <div class="therapist-delete">
    <%= link_to '退会する', therapist_path(@therapist.id), method: :delete %>

<% end %>